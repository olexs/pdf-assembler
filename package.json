{
  "name": "pdf-assembler",
  "productName": "PDF Assembler",
  "version": "1.3.0",
  "description": "Generator f√ºr PDF-Dateien",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest src",
    "e2e": "playwright test"
  },
  "keywords": [],
  "author": {
    "name": "Olexandr Savchuk",
    "email": "mail@olex.biz"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "pdf_helfer"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "devServer": {
              "hot": false
            },
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "nodeIntegration": "true",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "7.8.3",
    "@electron-forge/maker-dmg": "7.8.3",
    "@electron-forge/maker-squirrel": "7.8.3",
    "@electron-forge/plugin-webpack": "7.8.3",
    "@playwright/test": "1.54.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/blob-stream": "0.1.33",
    "@types/bootstrap": "5.2.10",
    "@types/jest": "29.5.14",
    "@types/pdfkit": "0.17.2",
    "@types/sortablejs": "1.15.8",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "css-loader": "7.1.2",
    "electron": "35.7.5",
    "electron-playwright-helpers": "1.8.2",
    "eslint": "8.57.1",
    "eslint-plugin-import": "2.32.0",
    "fork-ts-checker-webpack-plugin": "9.1.0",
    "jest": "29.7.0",
    "node-loader": "2.1.0",
    "playwright": "1.54.2",
    "semantic-release": "^23.0.0",
    "style-loader": "4.0.0",
    "transform-loader": "0.2.4",
    "ts-jest": "29.4.1",
    "ts-loader": "9.5.2",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "blob-stream": "^0.1.3",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.2",
    "cropperjs": "1.6.2",
    "electron-squirrel-startup": "^1.0.0",
    "i18next": "^24.0.0",
    "image-size": "^1.0.1",
    "pdfkit": "^0.17.0",
    "sortablejs": "^1.15.0",
    "tempy": "3.0.0"
  }
}

{
  "name": "pdf-assembler",
  "productName": "PDF Assembler",
  "version": "1.3.0",
  "description": "Generator f√ºr PDF-Dateien",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint .",
    "test": "jest src",
    "e2e": "playwright test"
  },
  "keywords": [],
  "author": {
    "name": "Olexandr Savchuk",
    "email": "mail@olex.biz"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icons/icon.icns"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "pdf_helfer",
            "iconUrl": "https://raw.githubusercontent.com/olexs/pdf-assembler/master/assets/icons/icon.ico",
            "setupIcon": "./assets/icons/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO",
            "icon": "./assets/icons/icon.icns"
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "devServer": {
              "hot": false
            },
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "nodeIntegration": "true",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "7.11.1",
    "@electron-forge/maker-dmg": "7.11.1",
    "@electron-forge/maker-squirrel": "7.11.1",
    "@electron-forge/plugin-webpack": "7.11.1",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "1.58.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.0.0",
    "@semantic-release/git": "^10.0.1",
    "@types/blob-stream": "0.1.33",
    "@types/bootstrap": "5.2.10",
    "@types/jest": "30.0.0",
    "@types/pdfkit": "0.17.4",
    "@types/sortablejs": "1.15.9",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "@vercel/webpack-asset-relocator-loader": "1.7.3",
    "css-loader": "7.1.2",
    "electron": "39.3.0",
    "electron-playwright-helpers": "1.8.2",
    "eslint": "9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "fork-ts-checker-webpack-plugin": "9.1.0",
    "jest": "30.2.0",
    "node-loader": "2.1.0",
    "playwright": "1.58.0",
    "semantic-release": "^25.0.0",
    "style-loader": "4.0.0",
    "transform-loader": "0.2.4",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "blob-stream": "^0.1.3",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.2",
    "cropperjs": "2.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "i18next": "^25.0.0",
    "image-size": "^2.0.0",
    "pdfkit": "^0.17.0",
    "sortablejs": "^1.15.0",
    "tempy": "3.0.0"
  }
}

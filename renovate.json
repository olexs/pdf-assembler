{
  "extends": [
    "config:recommended",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "groupName": "custom dev dependencies group",
      "automerge": true
    },
    {
      "groupName": "custom electron-forge group",
      "matchPackageNames": [
        "@electron-forge{/,}**"
      ]
    },
    {
      "groupName": "custom eslint group",
      "matchPackageNames": [
        "eslint{/,}**",
        "@typescript-eslint{/,}**"
      ]
    },
    {
      "matchPackageNames": [
        "@vercel/webpack-asset-relocator-loader"
      ],
      "allowedVersions": "1.7.3"
    }
  ],
  "platformAutomerge": true
}

{
  "extends": [
    "config:base",
    ":automergePatch"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": ["@electron-forge"],
      "groupName": "electron-forge monorepo"
    },
    {
      "matchDepTypes": ["devDependency"],
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}

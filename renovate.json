{
  "extends": [
    "config:base",
    ":automergeMinor"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["devDependency"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "dev dependencies",
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@electron-forge"],
      "groupName": "electron-forge monorepo"
    }
  ],
  "platformAutomerge": true
}
